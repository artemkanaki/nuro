{
  "compilerOptions": {
      "module": "commonjs",
      "target": "esNEXT",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "sourceMap": true
  },
  "include": [
      "src/**/*",
      "__src__/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
