  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--recursive",
        "--no-timeouts",
        "--colors",
        "${workspaceRoot}/tests/",
        "--reporter list",
        "--growl",
      ],
      "cwd": "${workspaceRoot}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest",
      "args": [
          "--runInBand",
          "--config",
          "${workspaceRoot}/tests/jest.config.json"
      ],
      "sourceMaps": true,
      "outFiles": [
          "${workspaceRoot}/dist/**/*"
      ]
  }
  ]
}